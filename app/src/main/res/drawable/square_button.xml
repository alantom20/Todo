<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> //指定形狀類型，默認為rectangle

    <solid android:color="#B4D68D" />//指定形狀的填充色

    <padding
        android:bottom="30dp"
        android:left="10dp"
        android:right="30dp"
        android:top="30dp" /> //設定內容區域離邊界的間距

    <corners android:radius="20dp" /> //設定圓角，只適用於 rectangle

</shape>